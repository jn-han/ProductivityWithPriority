{
    "name": "Productivity App",
    "version": "1.0.0",
    "description": "An app that lets you schedule tasks",
    "browser_action": {
        "default_title": "Organize yourself!",
        "default_popup": "popup.html"
    },
    "permissions": [
        "alarms",
        "activeTab",
        "tabs",
        "<all_urls>",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2
    
    
}